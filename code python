#mencetak1234567
for i in range(7,0,-1):
    for j in range(1,i+1):
        print(j,end=" ")
    print()

#mencetak bintang
for i in range(8):
    for j in range(i):
        print(" ",end="")
    for k in range(8-i):
        print("*",end="")
    print()

#mencetak segitiga bintang
for i in range(6):
    print(' '*(6-i-1)+'*'*(2*i+1))
print()
